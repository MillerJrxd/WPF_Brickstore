<Window x:Class="LegoDolog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegoDolog"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>

        <DataGrid AutoGenerateColumns="False" Grid.Column="1" Margin="5" Background="LightGreen">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ItemID" Width="100"/>
                <DataGridTextColumn Header="ItemName" Width="100"/>
                <DataGridTextColumn Header="CategoryName" Width="100"/>
                <DataGridTextColumn Header="ColorName" Width="100"/>
                <DataGridTextColumn Header="Qty" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox Height="35" VerticalAlignment="Top" Margin="5 15 0 0" 
                 FontSize="18" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
